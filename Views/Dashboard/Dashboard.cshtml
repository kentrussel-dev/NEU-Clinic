@using Microsoft.AspNetCore.Identity
@using WebApp.ViewModels
@inject SignInManager<Users> signInManager
@inject UserManager<Users> userManager

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/Layouts/_DashboardLayout.cshtml";

    // Determine the user's role
    var userRole = "Student"; // Default role
    var isSuperAdmin = false;
    var isAdmin = false;
    var isMedicalStaff = false;
    var isStudent = false;

    if (signInManager.IsSignedIn(User))
    {
        isSuperAdmin = User.IsInRole("SuperAdmin");
        isAdmin = User.IsInRole("Admin");
        isMedicalStaff = User.IsInRole("MedicalStaff");
        isStudent = User.IsInRole("Student");

        if (isSuperAdmin)
        {
            userRole = "SuperAdmin";
        }
        else if (isAdmin)
        {
            userRole = "Admin";
        }
        else if (isMedicalStaff)
        {
            userRole = "MedicalStaff";
        }
        else if (isStudent)
        {
            userRole = "Student";
        }
    }

    // Set the active tab (default to "home")
    var activeTab = ViewBag.ActiveTab ?? "home";
}

<div class="d-flex" id="wrapper">
    <!-- Sidebar -->
    <div class="bg-dark border-end" id="sidebar-wrapper">
        <div
            class="bg-primary text-white p-3 sidebar-header shadow-lg d-flex flex-column flex-sm-row justify-content-between align-items-center">
            <h4 class="m-0 sidebar-text text-nowrap">
                <i class="fas fa-heartbeat me-2"></i>Dashboard
            </h4>
            <button class="btn text-white border-0 toggle-btn" id="menu-toggle">
                <i class="fas fa-bars"></i>
            </button>
        </div>

        <div class="list-group list-group-flush mt-3 sidebar-content">
            <a href="#home"
                class="list-group-item list-group-item-action bg-dark text-white d-flex align-items-center active"
                data-tab="home">
                <i class="fas fa-home"></i><span class="sidebar-text ms-2">Home</span>
            </a>
            <a href="#profile"
                class="list-group-item list-group-item-action bg-dark text-white d-flex align-items-center"
                data-tab="profile">
                <i class="fas fa-user"></i><span class="sidebar-text ms-2">Profile</span>
            </a>
        </div>
    </div>

    <!-- Page Content -->
    <div id="page-content-wrapper" class="w-100">
        <div class="container-fluid p-4">
            <!-- Home Tab Content -->
            <div id="home-content" class="tab-content @(activeTab == "home" ? "active" : "")">
                <h2>Welcome to the Dashboard</h2>
                <p>This is your dashboard content.</p>
                @if (isStudent)
                {
                    <p>Welcome, Student!</p>
                }
                else if (isSuperAdmin)
                {
                    <p>Welcome, Super Admin!</p>
                }
                else if (isAdmin)
                {
                    <p>Welcome, Admin!</p>
                }
                else if (isMedicalStaff)
                {
                    <p>Welcome, Medical Staff!</p>
                }
            </div>

            <!-- Profile Tab Content -->
            <div id="profile-content" class="tab-content @(activeTab == "profile" ? "active" : "")"
                style="display: none;">
                <h2>Profile</h2>
                <p>This is your profile content.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById("menu-toggle").addEventListener("click", function () {
            document.getElementById("wrapper").classList.toggle("toggled");
        });

        // Tab functionality
        document.querySelectorAll('.list-group-item').forEach(item => {
            item.addEventListener('click', function (e) {
                e.preventDefault();
                const tab = this.getAttribute('data-tab');

                // Remove active class from all tabs
                document.querySelectorAll('.list-group-item').forEach(tabItem => {
                    tabItem.classList.remove('active');
                });

                // Add active class to the clicked tab
                this.classList.add('active');

                // Hide all tab content
                document.querySelectorAll('.tab-content').forEach(content => {
                    content.style.display = 'none';
                });

                // Show the selected tab content
                document.getElementById(`${tab}-content`).style.display = 'block';
            });
        });

        // Set the initial active tab based on the URL hash or default to "home"
        const initialTab = window.location.hash.substring(1) || "home";
        const initialTabItem = document.querySelector(`.list-group-item[data-tab="${initialTab}"]`);
        if (initialTabItem) {
            initialTabItem.classList.add('active');
            document.getElementById(`${initialTab}-content`).style.display = 'block';
        }
    </script>
}
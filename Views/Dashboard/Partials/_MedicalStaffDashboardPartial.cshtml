<link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
<div class="row">
    <!-- Left Column (2/3) -->
    <div class="col-md-8">
        <div class="row">
            <!-- Card 1: Patient Records -->
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0"><i class="fas fa-file-medical me-2"></i>Patient Records</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">View and manage patient records.</p>
                        <!-- Progress Bar Example -->
                        <div class="progress mb-3">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 90%;"
                                aria-valuenow="90" aria-valuemin="0" aria-valuemax="100">90%</div>
                        </div>
                        <small class="text-muted">Records updated.</small>
                    </div>
                </div>
            </div>

            <!-- Card 2: Appointments -->
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0"><i class="fas fa-calendar-check me-2"></i>Appointments</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">No upcoming appointments.</p>
                        <!-- Icon Example -->
                        <div class="text-center">
                            <i class="fas fa-calendar-day fa-3x text-primary mb-3"></i>
                            <p class="text-muted">Next appointment: None.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 3: Medical Alerts -->
        <div class="row">
            <div class="col-md-12 mb-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0"><i class="fas fa-exclamation-circle me-2"></i>Medical Alerts</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">No alerts.</p>
                        <!-- Graph Placeholder -->
                        <div class="text-center">
                            <canvas id="medicalAlertsChart" width="100%" height="50"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column (1/3) -->
    <div class="col-md-4">
        <!-- Card 4: Quick Links -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0"><i class="fas fa-link me-2"></i>Quick Links</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><a href="#" class="text-decoration-none"><i class="fas fa-user-plus me-2"></i>Add Patient</a>
                    </li>
                    <li><a href="#" class="text-decoration-none"><i class="fas fa-file-alt me-2"></i>View Reports</a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Card 5: Profile Summary -->
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0"><i class="fas fa-user me-2"></i>Profile Summary</h5>
            </div>
            <div class="card-body">
                <p class="card-text">View your profile details.</p>
                <!-- Progress Bar Example -->
                <div class="progress mb-3">
                    <div class="progress-bar bg-info" role="progressbar" style="width: 85%;" aria-valuenow="85"
                        aria-valuemin="0" aria-valuemax="100">85%</div>
                </div>
                <small class="text-muted">Profile completeness.</small>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
<div class="row">
    <!-- Left Column (2/3) -->
    <div class="col-md-8">
        <div class="row">
            <!-- Card 1: System Overview -->
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0"><i class="fas fa-tachometer-alt me-2"></i>System Overview</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Total Users: 1,234</p>
                        <!-- Graph Placeholder -->
                        <div class="text-center">
                            <canvas id="systemOverviewChart" width="100%" height="50"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card 2: Recent Activity -->
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0"><i class="fas fa-history me-2"></i>Recent Activity</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">No recent activity.</p>
                        <!-- Icon Example -->
                        <div class="text-center">
                            <i class="fas fa-clock fa-3x text-primary mb-3"></i>
                            <p class="text-muted">Last activity: 2 hours ago.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 3: User Management -->
        <div class="row">
            <div class="col-md-12 mb-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0"><i class="fas fa-users-cog me-2"></i>User Management</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Manage users and roles.</p>
                        <!-- Progress Bar Example -->
                        <div class="progress mb-3">
                            <div class="progress-bar bg-warning" role="progressbar" style="width: 50%;"
                                aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">50%</div>
                        </div>
                        <small class="text-muted">Pending user approvals.</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column (1/3) -->
    <div class="col-md-4">
        <!-- Card 4: Quick Actions -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><a href="#" class="text-decoration-none"><i class="fas fa-user-plus me-2"></i>Add User</a></li>
                    <li><a href="#" class="text-decoration-none"><i class="fas fa-file-alt me-2"></i>Generate
                            Reports</a></li>
                </ul>
            </div>
        </div>

        <!-- Card 5: System Alerts -->
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0"><i class="fas fa-exclamation-triangle me-2"></i>System Alerts</h5>
            </div>
            <div class="card-body">
                <p class="card-text">No alerts.</p>
                <!-- Icon Example -->
                <div class="text-center">
                    <i class="fas fa-shield-alt fa-3x text-primary mb-3"></i>
                    <p class="text-muted">All systems operational.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
<div class="row">
    <!-- Left Column (2/3) -->
    <div class="col-md-8">
        <div class="row">
            <!-- Card 1: Upcoming Events -->
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0"><i class="fas fa-calendar-alt me-2"></i>Upcoming Events</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">No upcoming events.</p>
                        <!-- Progress Bar Example -->
                        <div class="progress mb-3">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 25%;"
                                aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
                        </div>
                        <small class="text-muted">Next event in 5 days.</small>
                    </div>
                </div>
            </div>

            <!-- Card 2: Academic Calendar -->
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0"><i class="fas fa-calendar-check me-2"></i>Academic Calendar</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">View important dates and deadlines.</p>
                        <!-- Icon Example -->
                        <div class="text-center">
                            <i class="fas fa-calendar-day fa-3x text-primary mb-3"></i>
                            <p class="text-muted">Semester ends on Dec 15.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 3: Notifications -->
        <div class="row">
            <div class="col-md-12 mb-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0"><i class="fas fa-bell me-2"></i>Notifications</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">No new notifications.</p>
                        <!-- Graph Placeholder -->
                        <div class="text-center">
                            <canvas id="notificationChart" width="100%" height="50"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column (1/3) -->
    <div class="col-md-4">
        <!-- Card 4: Quick Links -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0"><i class="fas fa-link me-2"></i>Quick Links</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><a href="#" class="text-decoration-none"><i class="fas fa-book me-2"></i>Course Registration</a>
                    </li>
                    <li><a href="#" class="text-decoration-none"><i class="fas fa-chart-line me-2"></i>Grades</a></li>
                    <li><a href="#" class="text-decoration-none"><i class="fas fa-book-open me-2"></i>Library</a></li>
                </ul>
            </div>
        </div>

        <!-- Card 5: Profile Summary -->
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0"><i class="fas fa-user me-2"></i>Profile Summary</h5>
            </div>
            <div class="card-body">
                <p class="card-text">View your profile details.</p>
                <!-- Progress Bar Example -->
                <div class="progress mb-3">
                    <div class="progress-bar bg-info" role="progressbar" style="width: 75%;" aria-valuenow="75"
                        aria-valuemin="0" aria-valuemax="100">75%</div>
                </div>
                <small class="text-muted">Profile completeness.</small>
            </div>
        </div>
    </div>
</div>
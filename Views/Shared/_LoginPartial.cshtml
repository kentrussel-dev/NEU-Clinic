@using Microsoft.AspNetCore.Identity;
@inject SignInManager<Users> signInManager;



@if (signInManager.IsSignedIn(User))
{
	<a class="nav-link text-white" asp-controller="Account" asp-action="Logout">
		<i class="fas fa-sign-out-alt"></i> Logout
	</a>
}
else
{
	<a class="nav-link text-white" asp-controller="Account" asp-action="Login" aria-label="Login">
		<i class="fas fa-sign-in-alt"></i> Login
	</a>
	<a class="nav-link text-white" asp-controller="Account" asp-action="Register" aria-label="Login">
		<i class="fas fa-sign-in-alt"></i> Register
	</a>
}
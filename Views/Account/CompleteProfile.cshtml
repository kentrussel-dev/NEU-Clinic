@using WebApp.ViewModels;
@model ProfileViewModel;

@{
    ViewData["Title"] = "NEU Care | Profile Form";
    Layout = "~/Views/Shared/Layouts/_AccountLayout.cshtml";
}

<div
    class="account-container position-relative d-flex flex-column justify-content-center align-items-center min-vh-100 text-white text-center bg-primary overflow-hidden p-1">
    <div class="account-box bg-white rounded-4 p-5 shadow-lg w-100" style="max-width: 800px;">
        <div class="text-center mb-4">
            <img src="~/assets/images/NEU_LOGO.png" alt="Logo" style="height:75px; width:auto;">
            <h2 class="mt-3 fw-bold text-dark">Complete Your Profile</h2>
            <p class="text-muted">Fill in the details to unlock your full experience.</p>
        </div>

        <form asp-action="CompleteProfile" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="form-label text-start text-danger d-block"></div>


            <div class="row mb-3">
                <div class="col-md-4">
                    <input asp-for="FirstName" class="form-control text-start" placeholder="First Name" />
                    <span asp-validation-for="FirstName" class="form-label text-start text-danger d-block"></span>
                </div>

                <div class="col-md-4">
                    <input asp-for="LastName" class="form-control text-start" placeholder="Last Name" />
                    <span asp-validation-for="LastName" class="form-label text-start text-danger d-block"></span>
                </div>

                <div class="col-md-4">
                    <input asp-for="StudentId" class="form-control text-start" placeholder="Student ID" />
                    <span asp-validation-for="StudentId" class="form-label text-start text-danger d-block"></span>
                </div>

            </div>


            <div class="row mb-3">
                <div class="col-md-6">
                    <input asp-for="Username" class="form-control text-start" placeholder="Username" />
                    <span asp-validation-for="Username" class="form-label text-start text-danger d-block"></span>
                </div>
                <div class="col-md-6">
                    <input asp-for="PhoneNumber" class="form-control text-start" placeholder="Phone Number" />
                    <span asp-validation-for="PhoneNumber" class="form-label text-start text-danger d-block"></span>
                </div>
            </div>


            <div class="mb-3">
                <div class="input-group">
                    <input asp-for="Password" id="password" class="form-control text-start" type="password"
                        placeholder="Password" />
                    <button type="button" class="input-group-text bg-white border-start-0"
                        onclick="togglePasswordVisibility('password', this)">
                        <i class="fa-solid fa-eye-slash" id="togglePasswordIcon"></i>
                    </button>
                </div>
                <span asp-validation-for="Password" class="form-label text-start text-danger d-block"></span>
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <input asp-for="ConfirmPassword" id="confirmPassword" class="form-control text-start"
                        type="password" placeholder="Confirm Password" />
                    <button type="button" class="input-group-text bg-white border-start-0"
                        onclick="togglePasswordVisibility('confirmPassword', this)">
                        <i class="fa-solid fa-eye-slash" id="toggleConfirmPasswordIcon"></i>
                    </button>
                </div>
                <span asp-validation-for="ConfirmPassword" class="form-label text-start text-danger d-block"></span>
            </div>


            <div class="mb-3">
                <input asp-for="Address" class="form-control text-start" placeholder="Address" />
                <span asp-validation-for="Address" class="form-label text-start text-danger d-block"></span>
            </div>

            <div class="mb-3">
                <label for="formFile" class="form-label text-muted text-start d-block">Upload your E-Signature</label>
                <input asp-for="ESignature" class="form-control file-upload-control" type="file" id="formFile">
                <span asp-validation-for="ESignature" class="form-label text-start text-danger d-block"></span>
            </div>

            <button type="submit" class="btn w-100 p-2 bg-primary fw-bold text-white">Submit & Complete
                Profile</button>
        </form>

        <div class="text-center pt-4">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-primary fw-semibold">Back to
                Home</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePasswordVisibility(inputId, button) {
            const passwordInput = document.getElementById(inputId);
            const icon = button.querySelector('i');

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            } else {
                passwordInput.type = "password";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            }
        }
    </script>
}

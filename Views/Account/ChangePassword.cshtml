@using WebApp.ViewModels;
@model ChangePasswordViewModel;


@{
	ViewData["Title"] = "Change Password";
	Layout = "~/Views/Shared/Layouts/_AccountLayout.cshtml";

}

<div class="account-container ">
	<div class="account-box">
		<div class="text-center mb-3">
			<img src="~/assets/images/NEU_LOGO.png" alt="Logo" style="height:60px; width:auto;">
		</div>
		<h2 class="text-center mb-4">Change Password</h2>
		<form asp-action="ChangePassword" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="mb-3">
				<input asp-for="Email" class="form-control text-start" readonly />
			</div>
			<div class="mb-3">
				<input asp-for="NewPassword" class="form-control text-start" placeholder="New Password" />
				<span asp-validation-for="NewPassword" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<input asp-for="ConfirmNewPassword" class="form-control text-start"
					placeholder="Confirm New Password" />
				<span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
			</div>
			<input type="submit" value="Submit" class="btn w-100 p-2 bg-primary fw-bold text-white" />
			<div class="text-center pt-3">
				<a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none mt-3">Back</a>
			</div>
		</form>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}